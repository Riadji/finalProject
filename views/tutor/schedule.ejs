<%- include('../header/headerTutor.ejs') -%>

    <div class="container" style="margin-top: 20px;">

        <% tutor.Schedules.forEach( data => { %>
            <% students.forEach( student => { %>
                <% if(data.TutorSchedule.StudentId == student.id) { %>
                    <div class="card" style="width: 18rem; float: left; margin-right: 2%;">
                        <div class="card-body">
                            <p><%= `Name     : ${student.name}` %></p>
                            <p><%= `Schedule : ` %></p>
                            <span><%= `${data.date}` %></span>
                            <p><%= `Address  : ${student.address}` %></p>
                        </div>
                    </div>       
                <% }%>
            <% }) %>
            
        <% }) %>

    </div>

    

</body>
<script src="/custom/jquery/jquery.min.js"></script>
<script src="/bootstrap-4.0.0-dist/js/bootstrap.bundle.min.js"></script>
</html>